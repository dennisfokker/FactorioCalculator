{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
        "label": "ng serve",
        "type": "npm",
        "script": "start",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": {
            "owner": "typescript",
            "source": "ts",
            "applyTo": "closedDocuments",
            "fileLocation": [
                "relative",
                "${cwd}"
            ],
            "pattern": "$tsc",
            "background": {
                "activeOnStart": true,
                "beginsPattern": {
                    "regexp": "Compiling...|TS\\d+:"
                },
                "endsPattern": {
                    "regexp": "Compiled |Failed to compile."
                }
            }
        },
        "isBackground": true
    }]
}
